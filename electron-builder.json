{
  "appId": "com.libraryintelligence.app",
  "productName": "Library Management System",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "electron/preload.js",
    "library.db",
    "node_modules/**/*",
    "!node_modules/.cache"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "dist"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "generated-icon.png"
  },
  "mac": {
    "target": "dmg",
    "icon": "generated-icon.png"
  },
  "linux": {
    "target": "AppImage",
    "icon": "generated-icon.png"
  }
}